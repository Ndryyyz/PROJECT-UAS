class Mahasiswa:
    """Class untuk menyimpan data mahasiswa"""
    def __init__(self, nim, nama, nilai_tugas, nilai_uts, nilai_uas):
        self.nim = nim
        self.nama = nama
        self.nilai_tugas = nilai_tugas
        self.nilai_uts = nilai_uts
        self.nilai_uas = nilai_uas
        self.nilai_akhir = 0
        self.grade = ""
    
    def __str__(self):
        return f"{self.nim} | {self.nama} | T:{self.nilai_tugas} | UTS:{self.nilai_uts} | UAS:{self.nilai_uas} | Akhir:{self.nilai_akhir:.2f} | Grade:{self.grade}"
